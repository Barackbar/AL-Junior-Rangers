<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <com.au_team11.aljuniorrangers.AnimalPartsView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/animalPartsView" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="invisible"
        android:id="@+id/infoBox"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:autoText="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This will be the question asked in the quiz!"
        android:id="@+id/quizQuestion"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        android:id="@+id/fullquiz"
        >


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answer 1"
            android:id="@+id/answerA"
            android:checked="false"
            android:clickable="true"
            android:visibility="visible"
            android:textColor="#FFFFFF"
            android:buttonTint="#FFFFFF"
            android:textSize="18sp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answer 2"
            android:id="@+id/answerB"
            android:textColor="#FFFFFF"
            android:buttonTint="#FFFFFF"
            android:textSize="18sp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answer 3"
            android:id="@+id/answerC"
            android:textColor="#FFFFFF"
            android:buttonTint="#FFFFFF"
            android:textSize="18sp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answer 4"
            android:id="@+id/answerD"
            android:textColor="#FFFFFF"
            android:buttonTint="#FFFFFF"
            android:textSize="18sp" />

        <Button
            android:id="@+id/submitAnswer"

            android:text="Submit"
            android:textColor="#FFFFFF"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/quizbuttonshape"
            android:layout_gravity="center_horizontal"
            />

        <Button
            android:id="@+id/exitButton"

            android:text="Exit"
            android:textColor="#FFFFFF"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/quizbuttonshape"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Incorrect Answer, Please Try Again"
            android:id="@+id/isCorrect"
            android:layout_gravity="center_horizontal|top"
            android:visibility="gone"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />


    </RadioGroup>

    <Button
        android:id="@+id/quizB"

        android:text="Take the Quiz"
        android:textColor="#FFFFFF"


        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:layout_gravity="center_horizontal|bottom"
        />

    <Button
        android:id="@+id/infoExitButton"

        android:text="Back"
        android:textColor="#FFFFFF"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/quizbuttonshape"
        android:layout_gravity="left|bottom"
        android:visibility="gone"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Tap on the different features of the animal to learn more about it."
        android:id="@+id/welcomeText"
        android:layout_gravity="center_horizontal|top"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />
</FrameLayout>